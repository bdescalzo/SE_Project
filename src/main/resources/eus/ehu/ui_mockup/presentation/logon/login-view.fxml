<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.ehu.ui_mockup.presentation.LoginController">
   <children>
      <Label layoutX="222.0" layoutY="67.0" text="Enter your info" textFill="#6b6868">
         <font>
            <Font size="28.0" />
         </font>
      </Label>
      <TextField fx:id="userField" layoutX="220.0" layoutY="148.0" promptText="Username" styleClass="STATE_SUCCESS" />
      <PasswordField fx:id="passField" layoutX="220.0" layoutY="200.0" promptText="Password" styleClass="PasswordTextField" />
      <Button fx:id="loginButton" layoutX="244.0" layoutY="283.0" mnemonicParsing="false" onAction="#login" prefHeight="34.0" prefWidth="123.0" text="Login">
         <styleClass>
            <String fx:value="button-outlined" />
            <String fx:value="accent" />
         </styleClass>
      </Button>
      <Button fx:id="backButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#toWelcome" prefHeight="34.0" prefWidth="27.0" text=" ">
         <styleClass>
            <String fx:value="flat" />
            <String fx:value="button-circle" />
         </styleClass>
      </Button>
      <StackPane fx:id="modalPanePage" prefHeight="400.0" prefWidth="600.0" visible="false">
         <children>
            <HBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" />
         </children>
      </StackPane>
   </children>
</AnchorPane>
