@startuml TxikI/A Application Use Case Diagram

left to right direction
skinparam packageStyle rectangle
skinparam actorStyle awesome

actor "User" as user
actor "LLM AI" as llm

rectangle "TxikI/A Application" {
  usecase "Login" as login
  usecase "Sign Up" as signup
  usecase "Logout" as logout
  usecase "Manage Projects" as manageProjects
  usecase "Create Projects" as createProject
  usecase "Open Project" as openProject
  usecase "Change Project Name" as changeProjectName
  usecase "Delete Project" as deleteProject
  usecase "Ask Questions to AI" as askAI
  usecase "Generate Quiz" as genQuiz
  usecase "Complete Quiz" as completeQuiz
  usecase "Receive Quiz Feedback" as quizFeedback
  usecase "Generate Problem Statements" as genProblems
  usecase "Submit Elaborate Answers" as submitAnswers
  usecase "Receive Problem Feedback" as problemFeedback
  usecase "Receive Response of AI" as receiveAIResponse
}

' User interactions
user --> signup
user --> login
user --> logout
user --> manageProjects
user --> askAI
user --> genQuiz
user --> completeQuiz
user --> genProblems
user --> submitAnswers

' AI interactions - only one direction arrows
genQuiz <-- llm
genProblems <-- llm
quizFeedback <-- llm
problemFeedback <-- llm
receiveAIResponse <-- llm

' Include relationships
completeQuiz ..> quizFeedback : <<include>>
submitAnswers ..> problemFeedback : <<include>>
askAI ..> receiveAIResponse : <<include>>

' Project management includes
manageProjects ..> createProject : <<include>>
manageProjects ..> openProject : <<include>>
manageProjects ..> changeProjectName : <<include>>
manageProjects ..> deleteProject : <<include>>

@enduml
